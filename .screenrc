# Misc
defutf8 on
startup_message off
term screen-256color
vbell off

# Need more scrollback
defscrollback 10000

# Keep window names along the bottom
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{=kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B}%Y-%m-%d %{W}%c %{g}]'

# Allow Lion's Terminal.app (and others to scroll correctly)
termcapinfo xterm-256color|xterm-color|xterm|xterms|xs|rxvt ti@:te@

# Redraw the full screen when I quit programs like vi
altscreen on
